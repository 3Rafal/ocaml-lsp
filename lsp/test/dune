(executable
 (name server_test)
 (libraries stdune lsp jsonrpc yojson ppx_yojson_conv_lib fiber threads.posix)
 (modules server_test)
 (preprocess future_syntax))

(rule
 (alias test)
 (action
  (run ./server_test.exe)))

(rule
 (alias server-test)
 (action
  (run ./server_test.exe)))

