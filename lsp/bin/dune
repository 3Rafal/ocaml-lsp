(include_subdirs unqualified)

(executable
 (name gen)
 (libraries stdune))

;; The .errors files are produced to show which typescript snippets failed to parse
(rule
 (alias runtest)
 (mode promote)
 (deps ./specifications/specification-3-15.md)
 (action (with-stdout-to 3-15.errors (run ./gen.exe --test --md %{deps}))))

(rule
 (alias runtest)
 (mode promote)
 (deps ./specifications/specification-3-14.md)
 (action (with-stdout-to 3-14.errors (run ./gen.exe --test --md %{deps}))))
